# API Configuration
API_KEY=your-secure-api-key-here
SECRET_KEY=your-flask-secret-key-here

# Printer Configuration
PRINTER_TYPE=usb  # Options: usb, serial, network
PRINTER_VENDOR_ID=0x04b8  # Example for Epson
PRINTER_PRODUCT_ID=0x0e15  # Example for Epson
PRINTER_SERIAL_PORT=/dev/ttyUSB0  # For serial printers
PRINTER_NETWORK_IP=192.168.1.100  # For network printers

# MQTT Configuration (optional)
MQTT_ENABLED=false
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_BEFORE_PRINT=printer/before_print
MQTT_PAYLOAD_BEFORE_PRINT={"action": "power_on"}
MQTT_WAIT_SECONDS=5
MQTT_TIMEOUT_MINUTES=30
MQTT_TOPIC_AFTER_TIMEOUT=printer/after_timeout
MQTT_PAYLOAD_AFTER_TIMEOUT={"action": "power_off"}

# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key-here
MOTIVATION_ENABLED=false  # Enable motivational quotes using OpenAI
MOTIVATION_MODEL=gpt-4o-mini  # OpenAI model to use

# Language Configuration
LANGUAGE=de  # Options: de (German), en (English)

# Web Interface Authentication (optional)
WEB_AUTH_ENABLED=false  # Enable password protection for web interface
WEB_USERNAME=  # Optional username (leave empty for password-only auth)
WEB_PASSWORD=your-secure-web-password  # Required if WEB_AUTH_ENABLED=true
WEB_SESSION_TIMEOUT=1440  # Session timeout in minutes (default: 24 hours)
WEB_REMEMBER_ME_DAYS=30  # Remember me duration in days

# IP Whitelist for Web Interface (optional)
WEB_IP_WHITELIST_ENABLED=false  # Enable IP whitelist for web interface only (API not affected)
WEB_IP_WHITELIST=192.168.0.0/16,10.0.0.0/8,127.0.0.1  # Comma-separated list of allowed IPs/networks
# Common private network ranges:
# - 192.168.0.0/16 = 192.168.x.x (most home routers)
# - 10.0.0.0/8 = 10.x.x.x (some home/corporate networks)
# - 172.16.0.0/12 = 172.16.x.x - 172.31.x.x (less common)
# - 127.0.0.1 = localhost
# Single IPs: 192.168.1.100
# Specific subnet: 192.168.1.0/24 (only 192.168.1.x)

# Server Configuration
HOST=0.0.0.0
PORT=5001
DEBUG=False